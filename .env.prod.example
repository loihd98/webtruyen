# Production Environment Configuration
# Copy this file to .env.prod and update the values

# Database Configuration
DATABASE_URL="postgresql://webtruyen_user:CHANGE_THIS_PASSWORD@postgres:5432/webtruyen_prod"
POSTGRES_DB=webtruyen_prod
POSTGRES_USER=webtruyen_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Application Configuration
NODE_ENV=production
PORT=5000

# Domain and URLs
DOMAIN=vuaxemohinh.com
FRONTEND_URL=https://vuaxemohinh.com
BACKEND_URL=https://vuaxemohinh.com

# JWT Configuration (Generate secure random strings)
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_AT_LEAST_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_SECURE_REFRESH_SECRET_AT_LEAST_32_CHARACTERS

# File Upload Configuration
UPLOAD_DIR=/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Security
CORS_ORIGIN=https://vuaxemohinh.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log