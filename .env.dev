# Development Environment Configuration
# Copy this file to .env.dev and update the values

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/webtruyen_dev"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=webtruyen_dev

# Application Configuration
NODE_ENV=development
PORT=5000

# Domain and URLs (Local development)
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Next.js Public Variables  
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost
NEXT_PUBLIC_MEDIA_URL=http://localhost

# JWT Configuration (Use weaker secrets for development)
JWT_SECRET=dev_jwt_secret_key_for_development_only
JWT_REFRESH_SECRET=dev_refresh_secret_key_for_development_only

# File Upload Configuration
UPLOAD_DIR=/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional - can use fake SMTP for testing)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASS=testpassword

# Social Auth (Optional - use test credentials)
GOOGLE_CLIENT_ID=your-dev-google-client-id
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret
FACEBOOK_APP_ID=your-dev-facebook-app-id
FACEBOOK_APP_SECRET=your-dev-facebook-app-secret

# Security (Relaxed for development)
CORS_ORIGIN=http://localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=/app/logs/app.log

# Development Features
HOT_RELOAD=true
DEBUG_MODE=true