# Production Environment Variables
# Copy this file to .env and update the values for your production environment

# Database Configuration
DATABASE_URL="postgresql://postgres:CHANGE_THIS_PASSWORD@postgres:5432/web_truyen_db"
POSTGRES_DB=web_truyen_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# JWT Configuration - MUST CHANGE THESE
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS

# Server Configuration
NODE_ENV=production
PORT=5000
CORS_ORIGIN=https://yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX